= simple_form_for(@member) do |f|
  - if @member.errors.any?
    #error_explanation
      %h2
        = pluralize(@member.errors.count, "error")
        prohibited this member from being saved:
      %ul
        - @member.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :refnum
    %br/
    = f.text_field :refnum
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :contactno
    %br/
    = f.text_field :contactno
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .actions
    = f.submit
